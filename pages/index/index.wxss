/**index.wxss**/

.mod-test {
  height: 100%;
}

.mod-test .navTab {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  width: 100%;
  height: 80rpx;
  background-color: #ca1e2e;
  position: fixed;
  top: 0;
}

.mod-test .navTab .tab {
  position: relative;
  height: 80rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 80rpx;
}

.mod-test .navTab .tab.active {
  color: #fff;
  transition: all 0.2s ease-in;
}

.mod-test .navTab .tab.active::after {
  content: "";
  position: absolute;
  bottom: 2rpx;
  left: 0;
  height: 5rpx;
  width: 100%;
  background-color: #fff;
}

.mod-test .content {
  position: fixed;
  top: 82rpx;
  width: 100%;
  height: 100%;
  
}

.article-wrapper{
  display: flex;
  flex-direction: column;
padding-bottom: 100rpx;
}
.article-content{
  display: flex;
  flex-direction: row;
  padding: 10px;
  box-shadow: 0 0 5px #969696;
  margin: 10rpx 20rpx;
}
.article-content.visited{
  color: #999;
}
.article-content image{
  width: 300rpx;
  height: 240rpx;
  flex: 0 0 300rpx;
}
.article-content .article-info{
  flex: 1;
  margin-right: 20rpx;
  display: flex;
  font-size: 18px;
  position: relative
}
.article-content .article-info .author,.article-content .article-info .date{
  position: absolute;
  bottom: 0;
  font-size: 12px;
}
.article-content .article-info .author{
  left: 0;  
}
.article-content .article-info .date{
  right: 0;
}

.text-wrapper {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-top: 10px;
  padding-bottom: 100rpx;
  background-color: #f0f4f3;
}

.text-wrapper .text-content {
  padding: 10px;
  margin: 0 10rpx 20rpx;
  box-shadow: 0 0 5px #969696;
  background: #fff;
}

.pic-wrapper {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-bottom: 100rpx;
}
.pic-wrapper .random-btn{
  position: fixed;
  right: 20rpx;
  bottom: 50px;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50%;
  background-color: rgba(15, 149, 80, 0.6);
  color: #fff;
  text-align: center;

  z-index: 999
}
.pic-wrapper image {
  width: 50%;
  padding: 2rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}

.video-wrapper {
  display: flex;
  flex-direction: column;
  height: 100%;
  box-sizing: border-box;
  background-color: #f0f4f3;
  padding-bottom: 100rpx;
}

.video-item {
  margin: 0 10rpx 20rpx;
  box-shadow: 0 0 5px #969696;
}

.video-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  min-height: 38px;
}

.video-info .reading {
  display: flex;
  align-items: flex-end;
}

.reading image {
  width: 28rpx;
  height: 16rpx;
  margin-bottom: 4px;
  margin-right: 2px;
}

.reading .viewing {
  font-size: 12px;
}

.load-more {
  width: 60%;
  margin: 10px auto;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 16px;
  text-align: center;
  border: 1px solid #d8d8d8;
  border-radius: 5px;
}
