/**index.wxss**/
.mod-test {
    height: 100%;
}
.mod-test .navTab {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-around;
    height: 80rpx;
    background-color: #ca1e2e
}
.mod-test .navTab .tab {
    position: relative;
    height: 80rpx;
    color: rgba(255, 255, 255, 0.6);
    line-height: 80rpx;
}
.mod-test .navTab .tab.active {
    color: #fff;
    transition: all 0.2s ease-in;
}
.mod-test .navTab .tab.active::after {
    content: "";
    position: absolute;
    bottom: 2rpx;
    left: 0;
    height: 5rpx;
    width: 100%;
    background-color: #fff;
}

.mod-test .content {
    position: fixed;
    top: 100rpx;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
}
.pic-wrapper{
  display: flex;
  flex-direction:row;
  flex-wrap:wrap;
  padding-bottom: 120rpx;
}
.pic-wrapper image{
  width: 50%;
  padding: 2rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}

.video-wrapper{
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx;
  background-color: #F0F4F3;
}
.video-item{
  margin: 0 10rpx 20rpx;
  box-shadow: 0 0 5px #969696;
}
.video-info{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}

.video-info .reading{
  display: flex;
  align-items: flex-end;
  
}
.reading image{
  width: 28rpx;
  height: 16rpx;
  margin-bottom: 4px;
  margin-right: 2px
}
.reading .viewing{
  font-size: 12px
}
.load-more{
  width:60%;
  margin: 10px auto;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 16px;
  text-align: center;
  border: 1px solid #d8d8d8;
  border-radius: 5px;
}